<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    xmlns:android="http://schemas.android.com/apk/res/android">

<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/content_container"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    app:layout_constrainedWidth="true"
    app:layout_constraintWidth_percent="0.7"
    android:padding="10dp"
    android:background="@drawable/chat_message_background"
    app:layout_constraintEnd_toEndOf="parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="sdfsdfdsfdsfdsfsdfs"
        android:textSize="15sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/message"/>


    <TextView
        android:id="@+id/message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="13sp"
        android:textStyle="italic"
        android:textColor="@color/black"
        app:layout_constraintHorizontal_bias="0"
        tools:text="sdfdsfsdfsdfsdsfd\nsdfsdfdsf\nsdfdsfdsf"
        app:layout_constraintEnd_toEndOf="@id/content_container"
        app:layout_constraintStart_toStartOf="@id/content_container"
        app:layout_constraintBottom_toTopOf="@id/name"/>

</androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>